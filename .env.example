# Application
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL=postgresql://postgres:postgres@db:5432/taskdb?schema=public

# JWT
JWT_ACCESS_SECRET=replace_this_with_a_strong_random_secret
JWT_REFRESH_SECRET=replace_this_too
JWT_ACCESS_EXPIRES_IN=900      # 15分 = 900秒
JWT_REFRESH_EXPIRES_IN=604800  # 7日 = 604800秒

# Redis (optional)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
